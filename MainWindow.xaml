<Window x:Class="System_Cont.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_Cont"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized" Padding="0,0,0,0" Margin="4,0,0,0" ToolBar.OverflowMode="AsNeeded">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="Black">
            <Label Content="Judicial" Foreground="White" FontSize="40" HorizontalAlignment="Left" FontFamily="Bahnschrift SemiBold SemiCondensed" Margin="80 30 0 0"/>
            <Button x:Name="btnLogin" Content="Log In" Margin="0 -42 200 0" Width="100" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Background="Transparent" BorderThickness="0" BorderBrush="White" Cursor="Hand" Click="btnLogin_Click"/>
            <Button x:Name="btnSobre" Content="Sobre" Margin="0 -42 320 0" Width="100" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Background="Transparent" BorderThickness="0" BorderBrush="White" Cursor="Hand"/>
            <Button x:Name="btnServicos" Content="Serviços" Margin="0 -42 440 0" Width="110" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Background="Transparent" BorderThickness="0" BorderBrush="White" Cursor="Hand"/>
        </StackPanel>
        <StackPanel Grid.Row="1" >
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFD749B"/>
                    <GradientStop Color="#FF281AC8" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>

        </StackPanel>
    </Grid>
</Window>
