<Page x:Class="System_Cont.Views.GestaoDadosFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:System_Cont.Views"
      mc:Ignorable="d" 
      d:DesignHeight="865" d:DesignWidth="1920"
      Title="GestaoDadosFormPage">

    <Grid Background="#FF1F2121">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Button x:Name ="PDFpIMG" Content="PDF PARA IMG" Width="150" Height="70" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="0, 0, 5, 0" Click="PDFpIMG_Click" Cursor="Hand"/>
            <Button x:Name ="RecortarImagem" Content="RECORTAR" Width="100" Height="70" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="0, 0, 165, 0" Click="RecortarImagem_Click" Cursor="Hand"/>
            <Button Content="Button" Width="100" Height="70" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Margin="5, 0, 0, 0" Click="Button_Click_1"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel >
                    <Border Margin="0, 0, 0, 0" Width="300" Height="765" CornerRadius="0, 50, 0, 0">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#FF2D2D3A"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <ListView x:Name="Listimg" Width="300" Height="765" SelectionChanged="DataGridImg_SelectionChanged" FlowDirection="RightToLeft" Foreground="#DDFFFFFF">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="IMG">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel FlowDirection="LeftToRight">
                                                    <Image Source="{Binding Imagem}" Width="150" Height="150"/>
                                                    <TextBlock Text="{Binding Nome}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Border.Clip>
                            <RectangleGeometry  RadiusX="0" RadiusY="50" Rect="0,0,500,765"/>
                        </Border.Clip>
                    </Border>
                </StackPanel>


            </Grid>

            <Grid Grid.Column="1">
                <Button Content="DropZone" Width="1420" Height="700" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Bottom" Margin="0, 0, 0, 0" Background="#FF25252F" FontSize="72" Cursor="Hand" BorderBrush="#FF25252F" Click="SelecionarArquivos_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
