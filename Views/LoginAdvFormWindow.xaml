<Window x:Class="System_Cont.Views.LoginAdvFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_Cont.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="LoginAdvFormWindow" Height="600" Width="500" ResizeMode="NoResize">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="180" OverridesDefaultStyle="False" >
                <RowDefinition.Style>
                    <Style/>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>



        <StackPanel Grid.Row="0">
            <Label Content="Login" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 60 0 0" UseLayoutRounding="False" RenderTransformOrigin="1,0" BorderThickness="1,1,1,1" FontWeight="Bold" FontFamily="Bahnschrift SemiBold" Width="110"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Usuário:" FontSize="20" Width="100" Height="40" Margin="70 30 0 0" HorizontalAlignment="Left" />
            <TextBox x:Name="txtNomeCompleto" Padding="3" Width="350" Margin="0 -5 0 0" BorderThickness="1,1,1,1" Height="32" FontSize="17" Cursor="Arrow"/>

            <Label Content="Senha:" FontSize="20" Width="100" Height="40" Margin="70 15 0 0" HorizontalAlignment="Left" />
            <TextBox x:Name="txtSenha" Padding="3" Width="350" Margin="0 -5 0 0" BorderThickness="1,1,1,1" Height="32" FontSize="17" Cursor="Arrow"/>

            <Button x:Name="btnLogin" Content="Login" FontSize="22" Padding="10" Width="180" Height="50" Margin="0 50 0 0" Cursor="Hand" Click="btnLogin_Click"/>

            <Button x:Name="btnNoAccount" Content="Não possuo uma conta" FontSize="17" Padding="10" Width="200" Height="45" Margin="0 40 0 0" Background="{x:Null}" Foreground="Black" BorderBrush="{x:Null}" Click="btnNoAccount_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
